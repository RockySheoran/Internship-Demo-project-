{
  "name": "stayfinder-backend",
  "version": "2.0.0",
  "description": "StayFinder Backend API - Production-ready booking platform backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t stayfinder-backend .",
    "docker:run": "docker run -p 5000:5000 stayfinder-backend"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "booking",
    "rest-api",
    "authentication",
    "jwt",
    "airbnb-clone",
    "travel",
    "accommodation"
  ],
  "author": "StayFinder Team <team@stayfinder.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "cloudinary": "^1.41.0",
    "stripe": "^14.5.0",
    "socket.io": "^4.7.4",
    "redis": "^4.6.10",
    "agenda": "^5.0.0",
    "sharp": "^0.32.6",
    "express-fileupload": "^1.4.3",
    "validator": "^13.11.0",
    "slugify": "^1.6.6",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stayfinder/backend.git"
  },
  "bugs": {
    "url": "https://github.com/stayfinder/backend/issues"
  },
  "homepage": "https://stayfinder.com"
}
